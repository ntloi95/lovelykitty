<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thanhloi.finalproject.DiaryActivity"
    android:orientation="vertical">

    <LinearLayout tools:context="thanhloi.finalproject.DiaryActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/defaultcover"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:paddingBottom="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text=""
                    android:id="@+id/textView5"
                    android:layout_weight="1.5" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/avatar1"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day"
                    android:layout_weight="1.5"
                    android:textStyle="bold|italic"
                    android:textColor="#f40202"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="21dp" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/avatar2"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text=""
                    android:id="@+id/textView11"
                    android:layout_weight="1.5" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notiday"
                android:textColor="#ed1212"
                android:textAlignment="center" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/listPost"
                android:layout_weight="9"
                android:listSelector="@drawable/list_selector"
                android:background="#ee9bd9"
                android:stackFromBottom="true" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/addPos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#fff"
        android:src="@drawable/plus"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:contextClickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp" />
</RelativeLayout>
